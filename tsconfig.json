{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@air-monitor/air-quality": [
        "libs/air-quality/src"
      ],
      "@air-monitor/air-quality/*": [
        "libs/air-quality/src/*"
      ],
      "@air-monitor/core": [
        "libs/core/src"
      ],
      "@air-monitor/core/*": [
        "libs/core/src/*"
      ],
      "@air-monitor/messaging": [
        "libs/messaging/src"
      ],
      "@air-monitor/messaging/*": [
        "libs/messaging/src/*"
      ]
    }
  }
}